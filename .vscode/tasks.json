{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: start (root)",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "env": {
          "BROWSER": "none"
        }
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "message": 0
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting the development server",
          "endsPattern": "Compiled successfully|Failed to compile"
        }
      }
    },
    {
      "label": "node: start server",
      "type": "shell",
      "command": "node server/index.js",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "start: client + server (depend)",
      "type": "shell",
      "command": "echo Starting client and server",
      "dependsOn": [
        "npm: start (root)",
        "node: start server"
      ],
      "problemMatcher": []
    }
  ]
}